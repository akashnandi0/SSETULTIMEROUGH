<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booksearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/library11"
    tools:context="com.a2j.ssetultimerough.BOOKSEARCH">

    <TextView
        android:text="SELECT BRANCH"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="35px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brnch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/spinner_dialouge"
        android:layout_below="@+id/brnch"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="SELECT SEMESTER"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="35px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_below="@+id/spinner_dialouge"
        android:layout_marginTop="72dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:scrollbarSize="30px"
        android:id="@+id/spinner_dropdown"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SEARCH BOOK"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button31"
        android:layout_marginStart="104dp"
        android:layout_below="@+id/spinner_dropdown"
        android:layout_alignParentStart="true"
        android:layout_marginTop="132dp" />
</RelativeLayout>
